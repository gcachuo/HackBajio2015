<Window x:Class="Parking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon= "image\Icono.ico" Title="MainWindow" Height="750" Width="820" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" WindowState="Maximized" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="543*"/>
            <RowDefinition Height="39*"/>
        </Grid.RowDefinitions>
        <!--MAPA-->
        <WrapPanel Name="Mapa" MouseLeftButtonUp="Mapa_MouseLeftButtonUp" >
            <WrapPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF3A3A3A"/>
                    <GradientStop Color="#FF2B2B2B" Offset="0.98"/>
                    <GradientStop Color="#FF3A3333" Offset="0.47"/>
                </LinearGradientBrush>
            </WrapPanel.Background>
            <Label Name="Entradas" Content="Entradas"  Foreground="White"/>
        </WrapPanel>
        <!--MENU-->
        <Grid Grid.Row="1">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.004"/>
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF2C2C2C" Offset="0.47"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="71*"/>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="12*"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="12*"/>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="150*"/>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="12*"/>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="12*"/>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="150*"/>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="12*"/>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="71*"/>
            </Grid.ColumnDefinitions>
            <!--Boton rotar a la izquierda-->
            <Label  MouseUp="Left_MouseUp" Name="Left" FontWeight="Bold" FontSize="40" Grid.Column="1" BorderBrush="{x:Null}">
                <Label.Background>
                    <ImageBrush ImageSource="image/dleft.png" Stretch="Uniform"/>
                </Label.Background>
            </Label>
            <!--Boton rotar a la derecha-->
            <Label MouseUp="Right_MouseUp" Name="Right" FontWeight="Bold" Grid.Column="5" FontSize="40" BorderBrush="{x:Null}">
                <Label.Background>
                    <ImageBrush ImageSource="image/dright.png" Stretch="Uniform"/>
                </Label.Background>

            </Label>
            <Label Grid.Column="7" Name="normal" MouseUp="normal_MouseUp">
                <Label.Background>
                    <ImageBrush ImageSource="image/tipos/car.png" Stretch="Uniform"/>
                </Label.Background>

            </Label>
            <Label Grid.Column="9"  Name="discapacitados" MouseUp="discapacitados_MouseUp">
                <Label.Background>
                    <ImageBrush ImageSource="image/tipos/Discapacity.png" Stretch="Uniform"/>
                </Label.Background>

            </Label>
            <Label Grid.Column="11"  Name="vip" MouseUp="vip_MouseUp">
                <Label.Background>
                    <ImageBrush ImageSource="image/tipos/VIP.png" Stretch="Uniform"/>
                </Label.Background>

            </Label>
            <!--Boton de cajon-->
            <!--<Image Name="Cajon" Grid.Column="2">

            </Image>-->
            <Canvas Name="Cajon" Grid.Column="2">



            </Canvas>
            <!--Nombrar Lugar-->
            <!---->
            <!--Herramientas Edicion-->
            <Label Name="Save" Grid.Column="13" Visibility="Hidden">
                <Label.Background>
                    <ImageBrush ImageSource="image/save.png" Stretch="Uniform"/>
                </Label.Background>
            </Label>
            <Label Visibility="Hidden" Name="Clean" Grid.Column="15" MouseUp="Clean_MouseUp">
                <Label.Background>
                    <ImageBrush ImageSource="image/limpiar.png" Stretch="Uniform"/>
                </Label.Background>
            </Label>
            <!---->
        </Grid>
        <!--FIN-->

           
        </Grid>
</Window>
